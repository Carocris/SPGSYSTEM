@model Application.ViewModels.Supplier.SupplierViewModel

@{
    ViewData["Title"] = $"Productos de {Model.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title">
                                <i class="fas fa-truck me-2"></i>
                                Productos de @Model.Name
                            </h3>
                            <p class="text-muted mb-0">
                                <i class="fas fa-id-card me-1"></i>
                                ID Fiscal: @Model.TaxId
                            </p>
                        </div>
                        <div>
                            <a asp-controller="SupplierPrices" asp-action="Create" asp-route-supplierId="@Model.Id" class="btn btn-primary me-2">
                                <i class="fas fa-plus me-1"></i>
                                Agregar Producto
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Volver a Proveedores
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.SupplierPrices == null || ViewBag.SupplierPrices.Count == 0)
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">@Model.Name no tiene productos registrados</h5>
                            <p class="text-muted">Comienza agregando el primer producto para este proveedor.</p>
                            <a asp-controller="SupplierPrices" asp-action="Create" asp-route-supplierId="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                Agregar Producto
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Información del Proveedor
                                        </h6>
                                        <p class="mb-1"><strong>Nombre:</strong> @Model.Name</p>
                                        <p class="mb-1"><strong>ID Fiscal:</strong> @Model.TaxId</p>
                                        <p class="mb-1"><strong>Teléfono:</strong> @Model.Phone</p>
                                        <p class="mb-0"><strong>Email:</strong> @Model.Email</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-chart-bar me-1"></i>
                                            Resumen
                                        </h6>
                                        <p class="mb-1"><strong>Total de Productos:</strong> @ViewBag.SupplierPrices.Count</p>
                                        <p class="mb-1"><strong>Precio Promedio:</strong> @ViewBag.AveragePrice.ToString("C")</p>
                                        <p class="mb-0"><strong>Precio Más Alto:</strong> @ViewBag.HighestPrice.ToString("C")</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Producto</th>
                                        <th>Código</th>
                                        <th>Categoría</th>
                                        <th>Precio</th>
                                        <th>Moneda</th>
                                        <th>Estado</th>
                                        <th>Última Actualización</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.SupplierPrices)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.ProductName</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.ProductCode</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.CategoryName</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">@item.Price.ToString("C")</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">@item.Currency</span>
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @item.LastUpdated?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca"
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="SupplierPrices" asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-info" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-controller="SupplierPrices" asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-warning" title="Editar precio">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-controller="SupplierPrices" asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-danger" title="Eliminar"
                                                       onclick="return confirm('¿Está seguro de que desea eliminar este precio?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 