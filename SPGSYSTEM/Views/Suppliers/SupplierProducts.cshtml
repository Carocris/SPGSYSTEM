@model Application.ViewModels.Supplier.SupplierViewModel

@{
    ViewData["Title"] = $"Productos de {Model.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="card-title">
                                <i class="fas fa-truck me-2"></i>
                                Productos de @Model.Name
                            </h3>
                            <p class="text-muted mb-0">
                                <i class="fas fa-id-card me-1"></i>
                                ID Fiscal: @Model.TaxId
                            </p>
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Volver a Proveedores
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">@Model.Name - Productos</h5>
                        <p class="text-muted">Esta vista ha sido simplificada. Los productos se gestionan desde la secci√≥n de Productos.</p>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-boxes me-1"></i>
                            Ver Productos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 