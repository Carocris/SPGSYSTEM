@model Application.ViewModels.Category.CategoryViewModel
@{
    ViewData["Title"] = "Detalles de Categoría";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Navegación -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index")">Categorías</a>
                    </li>
                    <li class="breadcrumb-item active">@Model.Name</li>
                </ol>
            </nav>

            <!-- Información de la categoría -->
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-tag me-2"></i>
                            @Model.Name
                        </h3>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Información General</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>ID:</strong></td>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <td><strong>Nombre:</strong></td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Descripción:</strong></td>
                                    <td>@(string.IsNullOrWhiteSpace(Model.Description) ? "Sin descripción" : Model.Description)</td>
                                </tr>
                                <tr>
                                    <td><strong>Estado:</strong></td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Fecha de Creación:</strong></td>
                                    <td>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Estadísticas</h5>
                            <div class="row">
                                <div class="col-12">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <i class="fas fa-box fa-2x text-primary mb-2"></i>
                                            <h4 class="mb-0">@Model.ProductCount</h4>
                                            <small class="text-muted">Productos en esta categoría</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Productos de la categoría -->
            @if (Model.ProductCount > 0)
            {
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-boxes me-2"></i>
                            Productos en esta Categoría
                        </h5>
                        <a href="@Url.Action("Create", "Products", new { categoryId = Model.Id })" class="btn btn-success btn-sm">
                            <i class="fas fa-plus me-1"></i>Agregar Producto
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="fas fa-barcode me-1"></i>Código</th>
                                        <th><i class="fas fa-tag me-1"></i>Nombre</th>
                                        <th><i class="fas fa-truck me-1"></i>Proveedor</th>
                                        <th><i class="fas fa-boxes me-1"></i>Stock</th>
                                        <th><i class="fas fa-dollar-sign me-1"></i>Precio Compra</th>
                                        <th><i class="fas fa-dollar-sign me-1"></i>Precio Venta</th>
                                        <th><i class="fas fa-cogs me-1"></i>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.CategoryProducts != null)
                                    {
                                        @foreach (var product in ViewBag.CategoryProducts)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-secondary">@product.Code</span>
                                                </td>
                                                <td>
                                                    <div>
                                                        <strong>@product.Name</strong>
                                                        @if (!string.IsNullOrEmpty(product.Description))
                                                        {
                                                            <br><small class="text-muted">@product.Description</small>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">@product.SupplierName</span>
                                                </td>
                                                <td>
                                                    @if (product.Stock > 0)
                                                    {
                                                        <span class="badge bg-success">@product.Stock unidades</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Sin stock</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="text-primary fw-bold">$@product.PurchasePrice.ToString("N2")</span>
                                                </td>
                                                <td>
                                                    <span class="text-success fw-bold">$@product.SalePrice.ToString("N2")</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" 
                                                           class="btn btn-outline-primary" title="Ver detalles">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning" title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="@Url.Action("AddStock", "Products", new { id = product.Id })" 
                                                           class="btn btn-outline-info" title="Agregar stock">
                                                            <i class="fas fa-plus"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-4">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No hay productos en esta categoría</h5>
                        <p class="text-muted">Puedes agregar productos y asignarlos a esta categoría desde el módulo de productos.</p>
                        <a href="@Url.Action("Create", "Products", new { categoryId = Model.Id })" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Agregar Producto
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 