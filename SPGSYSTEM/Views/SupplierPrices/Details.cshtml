@model Application.ViewModels.SupplierPrice.SupplierPriceViewModel

@{
    ViewData["Title"] = "Detalles del Precio de Proveedor";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-eye me-2"></i>
                            Detalles del Precio de Proveedor
                        </h3>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>
                                Editar
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Volver
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-truck me-2"></i>
                                        Información del Proveedor
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Nombre:</strong></td>
                                            <td>@Model.SupplierName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>ID:</strong></td>
                                            <td>@Model.SupplierId</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-box me-2"></i>
                                        Información del Producto
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Nombre:</strong></td>
                                            <td>@Model.ProductName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Código:</strong></td>
                                            <td><span class="badge bg-info">@Model.ProductCode</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>ID:</strong></td>
                                            <td>@Model.ProductId</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-dollar-sign me-2"></i>
                                        Información del Precio
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Precio:</strong></td>
                                            <td>
                                                <span class="h4 text-success">@Model.Price.ToString("C")</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Moneda:</strong></td>
                                            <td><span class="badge bg-secondary">@Model.Currency</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Estado:</strong></td>
                                            <td>
                                                @if (Model.IsActive)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-calendar me-2"></i>
                                        Información Temporal
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Fecha de Creación:</strong></td>
                                            <td>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Última Actualización:</strong></td>
                                            <td>
                                                @if (Model.LastUpdated.HasValue)
                                                {
                                                    @Model.LastUpdated.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No actualizado</span>
                                                }
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-sticky-note me-2"></i>
                                            Notas
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Notes</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 