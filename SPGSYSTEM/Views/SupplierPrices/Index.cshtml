@model IEnumerable<Application.ViewModels.SupplierPrice.SupplierPriceViewModel>

@{
    ViewData["Title"] = "Precios de Proveedores";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Precios de Proveedores
                        </h3>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            Nuevo Precio
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay precios de proveedores registrados</h5>
                            <p class="text-muted">Comienza agregando el primer precio de proveedor.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                Agregar Precio
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Proveedor</th>
                                        <th>Producto</th>
                                        <th>Código</th>
                                        <th>Precio</th>
                                        <th>Moneda</th>
                                        <th>Estado</th>
                                        <th>Fecha Creación</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.SupplierName</strong>
                                            </td>
                                            <td>@item.ProductName</td>
                                            <td>
                                                <span class="badge bg-info">@item.ProductCode</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">@item.Price.ToString("C")</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.Currency</span>
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @item.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-info" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-danger" title="Eliminar"
                                                       onclick="return confirm('¿Está seguro de que desea eliminar este precio?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 