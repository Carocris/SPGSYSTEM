@model Application.ViewModels.Customer.CustomerViewModel

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Header -->
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-3" title="Volver al listado">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="flex-grow-1">
                <h2 class="h3 text-info mb-1">
                    <i class="fas fa-user me-2"></i>Detalles del Cliente
                </h2>
                <p class="text-muted mb-0">Información completa del cliente</p>
            </div>

        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <!-- Main Customer Information -->
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-gradient bg-info text-white py-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar-circle-large me-3">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h4 class="card-title mb-0">@Model.Name</h4>
                                <small class="opacity-75">Cliente ID: #@Model.Id.ToString("D4")</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body p-4">
                        <!-- Contact Information -->
                        <div class="row g-4">
                            <!-- Phone Information -->
                            <div class="col-md-6">
                                <div class="contact-detail-card">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="detail-icon bg-success text-white rounded-circle me-3">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Teléfono</h6>
                                            <small class="text-muted">Contacto principal</small>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <div class="contact-value">
                                            <span class="h5 mb-0">@Model.Phone</span>
                                            <div class="mt-2">
                                                <a href="tel:@Model.Phone" class="btn btn-outline-success btn-sm">
                                                    <i class="fas fa-phone me-1"></i>Llamar
                                                </a>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="contact-value text-center">
                                            <span class="text-muted fst-italic">
                                                <i class="fas fa-phone-slash me-2"></i>
                                                No especificado
                                            </span>
                                            <div class="mt-2">
                                                <a asp-action="CreateEdit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="fas fa-plus me-1"></i>Agregar
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Email Information -->
                            <div class="col-md-6">
                                <div class="contact-detail-card">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="detail-icon bg-primary text-white rounded-circle me-3">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Correo Electrónico</h6>
                                            <small class="text-muted">Para comunicaciones</small>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <div class="contact-value">
                                            <span class="h6 mb-0 text-break">@Model.Email</span>
                                            <div class="mt-2">
                                                <a href="mailto:@Model.Email" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-paper-plane me-1"></i>Enviar Email
                                                </a>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="contact-value text-center">
                                            <span class="text-muted fst-italic">
                                                <i class="fas fa-envelope-open-text me-2"></i>
                                                No especificado
                                            </span>
                                            <div class="mt-2">
                                                <a asp-action="CreateEdit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="fas fa-plus me-1"></i>Agregar
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Activity Section (Placeholder for future sales) -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0 text-muted">
                            <i class="fas fa-chart-line me-2"></i>Actividad del Cliente
                        </h6>
                    </div>
                    <div class="card-body text-center py-5">
                        <div class="text-muted">
                            <i class="fas fa-shopping-cart fa-3x mb-3 opacity-50"></i>
                            <h6 class="mb-2">Historial de Compras</h6>
                            <p class="mb-0">Próximamente: Historial de ventas y estadísticas del cliente</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Information -->
            <div class="col-lg-4">
                <!-- Customer Summary -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0 text-muted">
                            <i class="fas fa-info-circle me-2"></i>Resumen del Cliente
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span class="text-muted">ID del Cliente:</span>
                                <span class="fw-medium">#@Model.Id.ToString("D4")</span>
                            </li>
                            <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span class="text-muted">Estado:</span>
                                <span class="badge bg-success">Activo</span>
                            </li>
                            <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span class="text-muted">Teléfono:</span>
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <span class="text-success"><i class="fas fa-check"></i> Sí</span>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="fas fa-times"></i> No</span>
                                }
                            </li>
                            <li class="d-flex justify-content-between align-items-center py-2">
                                <span class="text-muted">Email:</span>
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <span class="text-success"><i class="fas fa-check"></i> Sí</span>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="fas fa-times"></i> No</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0 text-muted">
                            <i class="fas fa-bolt me-2"></i>Acciones Rápidas
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="CreateEdit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                                <i class="fas fa-edit me-2"></i>Editar Cliente
                            </a>
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <a href="tel:@Model.Phone" class="btn btn-outline-success">
                                    <i class="fas fa-phone me-2"></i>Llamar Cliente
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                                    <i class="fas fa-envelope me-2"></i>Enviar Email
                                </a>
                            }
                            <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>Imprimir Ficha
                            </button>
                            <button type="button" class="btn btn-outline-danger" 
                                    onclick="confirmDelete(@Model.Id, '@Model.Name')">
                                <i class="fas fa-trash me-2"></i>Eliminar Cliente
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Contact Status -->
                @if (string.IsNullOrEmpty(Model.Phone) || string.IsNullOrEmpty(Model.Email))
                {
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Información Incompleta
                        </h6>
                        <p class="mb-2">Este cliente no tiene toda la información de contacto.</p>
                        <hr>
                        <p class="mb-0">
                            <small>Considera agregar 
                                @if (string.IsNullOrEmpty(Model.Phone) && string.IsNullOrEmpty(Model.Email))
                                {
                                    <span>teléfono y email</span>
                                }
                                else if (string.IsNullOrEmpty(Model.Phone))
                                {
                                    <span>número de teléfono</span>
                                }
                                else
                                {
                                    <span>dirección de email</span>
                                }
                                para mejorar la comunicación.
                            </small>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">¿Estás seguro de que deseas eliminar el cliente:</p>
                <div class="alert alert-warning">
                    <strong id="customerNameToDelete"></strong>
                </div>
                <p class="text-muted mb-0">Esta acción eliminará toda la información del cliente y no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" id="deleteCustomerId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Eliminar Cliente
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    
    <script>
        function confirmDelete(customerId, customerName) {
            document.getElementById('deleteCustomerId').value = customerId;
            document.getElementById('customerNameToDelete').textContent = customerName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Print functionality
        window.addEventListener('beforeprint', function() {
            document.querySelector('.d-flex.gap-2').style.display = 'none';
        });

        window.addEventListener('afterprint', function() {
            document.querySelector('.d-flex.gap-2').style.display = 'flex';
        });

        // Add some interactive effects
        document.querySelectorAll('.contact-detail-card').forEach(function(card) {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
                this.style.transition = 'transform 0.3s ease';
                this.style.boxShadow = '0 4px 8px rgba(0,0,0,0.1)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = 'none';
            });
        });
    </script>

    <style>
        .card-header.bg-gradient {
            background: linear-gradient(45deg, #17a2b8, #138496) !important;
        }

        .avatar-circle-large {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
        }

        .detail-icon {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .contact-detail-card {
            background: #f8f9fa;
            border-radius: 0.375rem;
            padding: 1.5rem;
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .contact-value {
            background: white;
            border-radius: 0.375rem;
            padding: 1rem;
            text-align: center;
        }

        @@media print {
            .btn, .modal, .alert {
                display: none !important;
            }
            
            .card {
                box-shadow: none !important;
                border: 1px solid #dee2e6 !important;
            }
        }

        @@media (max-width: 768px) {
            .d-flex.gap-2 {
                flex-direction: column;
            }
            
            .btn {
                margin-bottom: 0.5rem;
            }

            .contact-detail-card {
                margin-bottom: 1rem;
            }
        }
    </style>
} 