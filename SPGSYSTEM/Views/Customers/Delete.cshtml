@model Application.ViewModels.Customer.CustomerViewModel

@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this customer?</strong>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                
                <div class="row mb-2">
                    <div class="col-sm-3">
                        <strong>ID:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Id
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3">
                        <strong>Name:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Name
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3">
                        <strong>Phone:</strong>
                    </div>
                    <div class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            @Model.Phone
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            @Model.Email
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div> 