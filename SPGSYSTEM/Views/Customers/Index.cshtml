@model IEnumerable<Application.ViewModels.Customer.CustomerViewModel>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="row">
    <div class="col-12">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="h2 text-primary mb-1">
                    <i class="fas fa-users me-2"></i>Gestión de Clientes
                </h2>
                <p class="text-muted mb-0">Administra tu base de datos de clientes</p>
            </div>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-user-plus me-2"></i>Nuevo Cliente
            </a>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Search and Filter Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control" id="searchInput" placeholder="Buscar clientes por nombre, email o teléfono...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="contactFilter">
                            <option value="">Todos los clientes</option>
                            <option value="complete">Información completa</option>
                            <option value="with-email">Con email</option>
                            <option value="with-phone">Con teléfono</option>
                            <option value="incomplete">Información incompleta</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="sortFilter">
                            <option value="name">Ordenar por Nombre</option>
                            <option value="email">Ordenar por Email</option>
                            <option value="recent">Más Recientes</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Customers Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-table me-2"></i>Lista de Clientes
                        </h5>
                        <span class="badge bg-primary">@Model.Count() clientes</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="customersTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0">
                                        <i class="fas fa-hashtag me-2"></i>ID
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-user me-2"></i>Nombre
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-phone me-2"></i>Teléfono
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-calendar me-2"></i>Fecha Registro
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-info-circle me-2"></i>Estado
                                    </th>
                                    <th class="border-0 text-center">
                                        <i class="fas fa-cogs me-2"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model)
                                {
                                    <tr class="customer-row" 
                                        data-name="@customer.Name.ToLower()" 
                                        data-email="@(customer.Email?.ToLower() ?? "")"
                                        data-phone="@(customer.Phone?.ToLower() ?? "")"
                                        data-has-email="@(!string.IsNullOrEmpty(customer.Email) ? "true" : "false")"
                                        data-has-phone="@(!string.IsNullOrEmpty(customer.Phone) ? "true" : "false")"
                                        data-is-complete="@((!string.IsNullOrEmpty(customer.Email) && !string.IsNullOrEmpty(customer.Phone)) ? "true" : "false")">
                                        <td class="align-middle">
                                            <span class="badge bg-secondary">#@customer.Id.ToString("D4")</span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                                <div>
                                                    <strong class="text-primary">@customer.Name</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            @if (!string.IsNullOrEmpty(customer.Email))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-envelope text-primary me-2"></i>
                                                    <span class="text-truncate" title="@customer.Email">@customer.Email</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">No especificado</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            @if (!string.IsNullOrEmpty(customer.Phone))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-phone text-success me-2"></i>
                                                    <span>@customer.Phone</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">No especificado</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <small class="text-muted">@customer.CreatedDate.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td class="align-middle">
                                            @if (!string.IsNullOrEmpty(customer.Email) && !string.IsNullOrEmpty(customer.Phone))
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Completo
                                                </span>
                                            }
                                            else if (!string.IsNullOrEmpty(customer.Email) || !string.IsNullOrEmpty(customer.Phone))
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Parcial
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-minus me-1"></i>Básico
                                                </span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@customer.Id" 
                                                   class="btn btn-outline-primary btn-sm" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@customer.Id" 
                                                   class="btn btn-outline-warning btn-sm" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (!string.IsNullOrEmpty(customer.Email))
                                                {
                                                    <a href="mailto:@customer.Email" 
                                                       class="btn btn-outline-info btn-sm" title="Enviar Email">
                                                        <i class="fas fa-paper-plane"></i>
                                                    </a>
                                                }
                                                <button type="button" class="btn btn-outline-danger btn-sm" 
                                                        title="Eliminar" onclick="confirmDelete(@customer.Id, '@customer.Name')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Statistics Section -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-primary mb-1">@Model.Count()</h4>
                                        <small class="text-muted">Total Clientes</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-success mb-1">@Model.Count(c => !string.IsNullOrEmpty(c.Email))</h4>
                                        <small class="text-muted">Con Email</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-info mb-1">@Model.Count(c => !string.IsNullOrEmpty(c.Phone))</h4>
                                        <small class="text-muted">Con Teléfono</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-warning mb-1">@Model.Count(c => (!string.IsNullOrEmpty(c.Email) && !string.IsNullOrEmpty(c.Phone)))</h4>
                                        <small class="text-muted">Información Completa</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-muted mb-3">No hay clientes registrados</h4>
                <p class="text-muted mb-4">Comienza agregando tu primer cliente al sistema</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Agregar Primer Cliente
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">¿Estás seguro de que deseas eliminar el cliente:</p>
                <div class="alert alert-warning">
                    <strong id="customerNameToDelete"></strong>
                </div>
                <p class="text-muted mb-0">Esta acción eliminará toda la información del cliente y no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" id="deleteCustomerId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Eliminar Cliente
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            filterCustomers();
        });

        document.getElementById('contactFilter').addEventListener('change', function() {
            filterCustomers();
        });

        document.getElementById('sortFilter').addEventListener('change', function() {
            sortCustomers();
        });

        function filterCustomers() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const contactFilter = document.getElementById('contactFilter').value;
            const customers = document.querySelectorAll('.customer-row');

            customers.forEach(function(customer) {
                const name = customer.getAttribute('data-name');
                const email = customer.getAttribute('data-email');
                const phone = customer.getAttribute('data-phone');
                const hasEmail = customer.getAttribute('data-has-email') === 'true';
                const hasPhone = customer.getAttribute('data-has-phone') === 'true';
                const isComplete = customer.getAttribute('data-is-complete') === 'true';

                let showCustomer = true;

                // Search filter
                if (searchTerm && !name.includes(searchTerm) && !email.includes(searchTerm) && !phone.includes(searchTerm)) {
                    showCustomer = false;
                }

                // Contact filter
                if (contactFilter) {
                    switch(contactFilter) {
                        case 'complete':
                            if (!isComplete) showCustomer = false;
                            break;
                        case 'with-email':
                            if (!hasEmail) showCustomer = false;
                            break;
                        case 'with-phone':
                            if (!hasPhone) showCustomer = false;
                            break;
                        case 'incomplete':
                            if (isComplete) showCustomer = false;
                            break;
                    }
                }

                customer.style.display = showCustomer ? 'table-row' : 'none';
            });
        }

        function sortCustomers() {
            const sortBy = document.getElementById('sortFilter').value;
            const tbody = document.querySelector('#customersTable tbody');
            const customers = Array.from(tbody.querySelectorAll('.customer-row'));

            customers.sort(function(a, b) {
                let aValue, bValue;

                switch(sortBy) {
                    case 'name':
                        aValue = a.getAttribute('data-name');
                        bValue = b.getAttribute('data-name');
                        break;
                    case 'email':
                        aValue = a.getAttribute('data-email');
                        bValue = b.getAttribute('data-email');
                        break;
                    default:
                        return 0;
                }

                return aValue.localeCompare(bValue);
            });

            // Reorder DOM elements
            customers.forEach(function(customer) {
                tbody.appendChild(customer);
            });
        }

        function confirmDelete(customerId, customerName) {
            document.getElementById('deleteCustomerId').value = customerId;
            document.getElementById('customerNameToDelete').textContent = customerName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Add hover effects
        document.querySelectorAll('.customer-row').forEach(function(row) {
            row.addEventListener('mouseenter', function() {
                this.classList.add('table-active');
            });

            row.addEventListener('mouseleave', function() {
                this.classList.remove('table-active');
            });
        });
    </script>

    <style>
        .avatar-circle {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            color: #6c757d;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1) !important;
        }

        .btn-group .btn {
            border-radius: 0;
        }

        .btn-group .btn:first-child {
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
        }

        .btn-group .btn:last-child {
            border-top-right-radius: 0.375rem;
            border-bottom-right-radius: 0.375rem;
        }

        .stat-item {
            padding: 1rem 0;
        }

        .table-responsive {
            border-radius: 0.375rem;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
        }

        .table td {
            vertical-align: middle;
        }

        @@media (max-width: 768px) {
            .btn-group .btn {
                font-size: 0.8rem;
                padding: 0.375rem 0.5rem;
            }
            
            .table-responsive {
                font-size: 0.9rem;
            }
        }
    </style>
}
