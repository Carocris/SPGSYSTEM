@model Application.ViewModels.Customer.CustomerSaveViewModel

@{
    bool isEdit = ViewBag.CustomerId != null || ViewBag.IsEdit == true;
    ViewData["Title"] = isEdit ? "Edit Customer" : "Create Customer";
}

<h1>@(isEdit ? "Edit Customer" : "Create Customer")</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            @if (isEdit)
            {
                <!-- Campo oculto para el ID cuando es ediciÃ³n -->
                <input type="hidden" name="Id" value="@ViewBag.CustomerId" />
            }
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Name *</label>
                <input asp-for="Name" class="form-control" placeholder="Enter customer name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-@(isEdit ? "warning" : "success")">
                    @(isEdit ? "Update Customer" : "Create Customer")
                </button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 