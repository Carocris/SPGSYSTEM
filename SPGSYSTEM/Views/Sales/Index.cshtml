@model IEnumerable<Application.ViewModels.Sale.SaleViewModel>
@using Database.Enum

@{
    ViewData["Title"] = "Gestión de Ventas";
}

<div class="row">
    <div class="col-12">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="h2 text-primary mb-1">
                    <i class="fas fa-shopping-cart me-2"></i>Gestión de Ventas
                </h2>
                <p class="text-muted mb-0">Administra las ventas del sistema</p>
            </div>
            <a asp-action="CreateEdit" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Nueva Venta
            </a>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Search and Filter Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control" id="searchInput" placeholder="Buscar por ID de venta o nombre de cliente...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="paymentFilter">
                            <option value="">Todos los pagos</option>
                            <option value="Cash">Efectivo</option>
                            <option value="Card">Tarjeta</option>
                            <option value="Transfer">Transferencia</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="amountFilter">
                            <option value="">Todos los montos</option>
                            <option value="low">$0 - $100</option>
                            <option value="medium">$100 - $500</option>
                            <option value="high">$500+</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Sales Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-table me-2"></i>Lista de Ventas
                        </h5>
                        <span class="badge bg-primary">@Model.Count() ventas</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="salesTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0">
                                        <i class="fas fa-hashtag me-2"></i>ID Venta
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-user me-2"></i>Cliente
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-calendar me-2"></i>Fecha
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-boxes me-2"></i>Productos
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-dollar-sign me-2"></i>Total
                                    </th>
                                    <th class="border-0">
                                        <i class="fas fa-credit-card me-2"></i>Estado Pago
                                    </th>
                                    <th class="border-0 text-center">
                                        <i class="fas fa-cogs me-2"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sale in Model)
                                {
                                    <tr class="sale-row"
                                        data-customer="@(sale.CustomerName?.ToLower() ?? "")"
                                        data-payment="@(sale.PaymentStatus.ToString() ?? "")"
                                        data-amount="@sale.TotalAmount"
                                        data-date="@sale.SaleDate.ToString("yyyy-MM-dd")">
                                        <td class="align-middle">
                                            <span class="badge bg-secondary">#@sale.Id.ToString("D4")</span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="d-flex align-items-center">
                                                <div class="sale-icon bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                                <div>
                                                    <strong class="text-primary">@(sale.CustomerName ?? "Cliente no disponible")</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <div>
                                                <strong>@sale.SaleDate.ToString("dd/MM/yyyy")</strong>
                                                <br><small class="text-muted">@sale.SaleDate.ToString("HH:mm")</small>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <span class="badge bg-info">
                                                <i class="fas fa-box me-1"></i>@(sale.Details?.Count() ?? 0) artículo(s)
                                            </span>
                                        </td>
                                        <td class="align-middle">
                                            <span class="text-success fw-bold">$@sale.TotalAmount.ToString("N2")</span>
                                        </td>
                                        <td class="align-middle">
                                            <span class="badge @sale.PaymentStatusBadgeClass">
                                                @sale.PaymentStatusDisplay
                                                    </span>
                                            @if (sale.Payment != null)
                                            {
                                                <br><small class="text-muted">@sale.Payment.PaymentMethodName</small>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@sale.Id"
                                                   class="btn btn-outline-info btn-sm" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="CreateEdit" asp-route-id="@sale.Id"
                                                   class="btn btn-outline-warning btn-sm" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (sale.Payment == null)
                                                {
                                                    <a asp-controller="Payments" asp-action="CreateEdit" asp-route-saleId="@sale.Id"
                                                       class="btn btn-outline-success btn-sm" title="Crear pago">
                                                    <i class="fas fa-credit-card"></i>
                                                </a>
                                                }
                                                else if (sale.Payment.Status == PaymentStatusType.Cancelled)
                                                {
                                                    <a asp-controller="Payments" asp-action="CreateEdit" asp-route-id="@sale.Payment.Id"
                                                       class="btn btn-outline-info btn-sm" title="Gestionar pago">
                                                        <i class="fas fa-cog"></i>
                                                    </a>
                                                }
                                                else if (sale.Payment.Status == PaymentStatusType.Completed)
                                                {
                                                    <button type="button" class="btn btn-outline-warning btn-sm"
                                                            onclick="confirmCancelPayment(@sale.Payment.Id)" 
                                                            title="Cancelar Pago">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                                <button type="button" class="btn btn-outline-info btn-sm"
                                                        title="Imprimir" onclick="printSale(@sale.Id)">
                                                    <i class="fas fa-print"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger btn-sm"
                                                        title="Eliminar" onclick="confirmDelete(@sale.Id, '@sale.Id.ToString("D4")')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Statistics Section -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-primary mb-1">@Model.Count()</h4>
                                        <small class="text-muted">Total Ventas</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-success mb-1">$@Model.Sum(s => s.TotalAmount).ToString("N2")</h4>
                                        <small class="text-muted">Total Ingresos</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-info mb-1">@Model.Count(s => s.IsPaid)</h4>
                                        <small class="text-muted">Ventas Pagadas</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-warning mb-1">@Model.Count(s => s.IsCancelled)</h4>
                                        <small class="text-muted">Ventas Canceladas</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <h4 class="text-danger mb-1">@Model.Count(s => s.IsCancelled)</h4>
                                        <small class="text-muted">Ventas Canceladas</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-shopping-cart text-muted" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-muted mb-3">No hay ventas registradas</h4>
                <p class="text-muted mb-4">Comienza registrando tu primera venta en el sistema</p>
                <a asp-action="CreateEdit" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Registrar Primera Venta
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">¿Estás seguro de que deseas eliminar la venta:</p>
                <div class="alert alert-warning">
                    <strong id="saleIdToDelete"></strong>
                </div>
                <p class="text-muted mb-0">Esta acción eliminará toda la información de la venta y no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" id="deleteSaleId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Eliminar Venta
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            filterSales();
        });

        document.getElementById('paymentFilter').addEventListener('change', function() {
            filterSales();
        });

        document.getElementById('amountFilter').addEventListener('change', function() {
            filterSales();
        });

        function filterSales() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const paymentFilter = document.getElementById('paymentFilter').value;
            const amountFilter = document.getElementById('amountFilter').value;
            const sales = document.querySelectorAll('.sale-row');

            sales.forEach(function(sale) {
                const customer = sale.getAttribute('data-customer');
                const payment = sale.getAttribute('data-payment');
                const amount = parseFloat(sale.getAttribute('data-amount'));

                let showSale = true;

                // Search filter
                if (searchTerm && !customer.includes(searchTerm)) {
                    showSale = false;
                }

                // Payment filter
                if (paymentFilter && payment !== paymentFilter) {
                    showSale = false;
                }

                // Amount filter
                if (amountFilter) {
                    switch(amountFilter) {
                        case 'low':
                            if (amount > 100) showSale = false;
                            break;
                        case 'medium':
                            if (amount < 100 || amount > 500) showSale = false;
                            break;
                        case 'high':
                            if (amount < 500) showSale = false;
                            break;
                    }
                }

                sale.style.display = showSale ? 'table-row' : 'none';
            });
        }

        function confirmDelete(saleId, saleIdText) {
            document.getElementById('deleteSaleId').value = saleId;
            document.getElementById('saleIdToDelete').textContent = saleIdText;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function printSale(saleId) {
            // Implementar funcionalidad de impresión
            window.open(`/Sales/Print/${saleId}`, '_blank');
        }

        function confirmCancelPayment(paymentId) {
            if (confirm('¿Estás seguro de que deseas cancelar este pago?')) {
                window.location.href = `/Payments/Cancel/${paymentId}`;
            }
        }

        // Add hover effects
        document.querySelectorAll('.sale-row').forEach(function(row) {
            row.addEventListener('mouseenter', function() {
                this.classList.add('table-active');
            });

            row.addEventListener('mouseleave', function() {
                this.classList.remove('table-active');
            });
        });
    </script>

    <style>
        .sale-icon {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            color: #6c757d;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1) !important;
        }

        .btn-group .btn {
            border-radius: 0;
        }

        .btn-group .btn:first-child {
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
        }

        .btn-group .btn:last-child {
            border-top-right-radius: 0.375rem;
            border-bottom-right-radius: 0.375rem;
        }

        /* Custom button sizes for more compact design */
        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            line-height: 1.2;
        }

        .btn-group-sm .btn i {
            font-size: 0.7rem;
        }

        /* Make button groups more compact */
        .btn-group {
            gap: 1px;
        }

        .stat-item {
            padding: 1rem 0;
        }

        .table-responsive {
            border-radius: 0.375rem;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
        }

        .table td {
            vertical-align: middle;
        }

        @@media (max-width: 768px) {
            .btn-group .btn {
                font-size: 0.8rem;
                padding: 0.375rem 0.5rem;
            }
            
            .table-responsive {
                font-size: 0.9rem;
            }
        }
    </style>
} 