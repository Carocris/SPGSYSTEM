@model Application.ViewModels.Payment.PaymentViewModel
@using Database.Enum

@{
    ViewData["Title"] = "Detalles del Pago";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Header -->
        <div class="d-flex align-items-center mb-4 no-print">
            <a asp-action="Index" class="btn btn-outline-secondary me-3" title="Volver al listado">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="flex-grow-1">
                <h2 class="h3 text-success mb-1">
                    <i class="fas fa-file-invoice-dollar me-2"></i>Detalles del Pago
                </h2>
                <p class="text-muted mb-0">Información completa del pago #@Model.Id.ToString("D4")</p>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show no-print" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="mb-1">Venta <a asp-controller="Sales" asp-action="Details" asp-route-id="@Model.SaleId">@Model.SaleNumber</a></h4>
                                <p class="text-muted mb-2">Cliente: @Model.CustomerName</p>
                                <span class="badge @Model.StatusBadgeClass">@Model.PaymentStatus</span>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <small class="text-muted">Monto Pagado</small>
                                <h2 class="text-success fw-bold mb-0">$@Model.Amount.ToString("N2")</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle me-2"></i>Información de Pago
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        @if (Model.PaymentMethod == PaymentMethodType.Transfer)
                        {
                            <div id="transfer-details">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <strong>Método:</strong>
                                        <p><i class="fas fa-university me-2 text-primary"></i>@Model.PaymentMethodName</p>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Fecha de Pago:</strong>
                                        <p><i class="fas fa-calendar-alt me-2 text-primary"></i>@Model.PaymentDate.ToString("g")</p>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.BankAccount))
                                    {
                                        <div class="col-md-6">
                                            <strong>Banco/Cuenta:</strong>
                                            <p><i class="fas fa-building-columns me-2 text-primary"></i>@Model.BankAccount</p>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.TransferReference))
                                    {
                                        <div class="col-md-6">
                                            <strong>Referencia:</strong>
                                            <p><i class="fas fa-hashtag me-2 text-primary"></i>@Model.TransferReference</p>
                                        </div>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(Model.TransferReceiptPath))
                                {
                                    <hr class="my-4">
                                    <h6 class="text-center mb-3">Comprobante de Pago</h6>
                                    <div class="text-center">
                                        <a href="@Url.Content(Model.TransferReceiptPath)" data-bs-toggle="modal" data-bs-target="#receiptModal">
                                            <img src="@Url.Content(Model.TransferReceiptPath)" class="img-fluid rounded shadow-sm" alt="Comprobante" style="max-height: 250px; cursor: pointer;">
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                        else if (Model.PaymentMethod == PaymentMethodType.Card)
                        {
                            <div id="card-details">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <strong>Método:</strong>
                                        <p><i class="fas fa-credit-card me-2 text-primary"></i>@Model.PaymentMethodName</p>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Fecha de Pago:</strong>
                                        <p><i class="fas fa-calendar-alt me-2 text-primary"></i>@Model.PaymentDate.ToString("g")</p>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Tarjeta:</strong>
                                        <p>**** **** **** @(Model.CardNumber?.Substring(Math.Max(0, Model.CardNumber.Length - 4)))</p>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Titular:</strong>
                                        <p>@Model.CardHolderName</p>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (Model.PaymentMethod == PaymentMethodType.Cash)
                        {
                            <div id="cash-details">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <strong>Método:</strong>
                                        <p><i class="fas fa-money-bill-wave me-2 text-success"></i>@Model.PaymentMethodName</p>
                                    </div>
                                     <div class="col-md-6">
                                        <strong>Fecha de Pago:</strong>
                                        <p><i class="fas fa-calendar-alt me-2 text-primary"></i>@Model.PaymentDate.ToString("g")</p>
                                    </div>
                                </div>
                                <div class="alert alert-success mt-3">
                                    Pago recibido en efectivo.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0 text-muted">
                            <i class="fas fa-receipt me-2"></i>Resumen de Venta
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="d-flex justify-content-between py-2 border-bottom">
                                <span>Total Venta:</span>
                                <span class="fw-medium">$@Model.SaleTotal.ToString("N2")</span>
                            </li>
                            <li class="d-flex justify-content-between py-2">
                                <span>Monto Pagado:</span>
                                <span class="fw-bold text-success">$@Model.Amount.ToString("N2")</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm border-0 no-print">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0 text-muted">
                            <i class="fas fa-bolt me-2"></i>Acciones
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="CreateEdit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Editar Pago
                            </a>
                             <button type="button" class="btn btn-info" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>Imprimir Recibo
                            </button>
                            <button type="button" class="btn btn-danger" 
                                    data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash me-2"></i>Eliminar Pago
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Receipt Modal -->
<div class="modal fade" id="receiptModal" tabindex="-1" aria-labelledby="receiptModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="receiptModalLabel">Comprobante de Pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img src="@Url.Content(Model.TransferReceiptPath)" class="img-fluid" alt="Comprobante de pago">
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar este pago? Esta acción no se puede deshacer.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        @@media print {
            .no-print {
                display: none !important;
            }
            body {
                background-color: #fff;
            }
            .card {
                box-shadow: none !important;
                border: 1px solid #ddd !important;
            }
        }
    </style>
} 