@model Application.ViewModels.Payment.PaymentViewModel

@{
    ViewData["Title"] = "Eliminar Pago";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <!-- Header -->
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-3" title="Volver al listado">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div>
                <h2 class="h3 text-danger mb-1">
                    <i class="fas fa-exclamation-triangle me-2"></i>Eliminar Pago
                </h2>
                <p class="text-muted mb-0">Confirma la eliminaci√≥n del pago #@Model.Id</p>
            </div>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Warning Message -->
        <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
            <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
            <div>
                <h6 class="alert-heading mb-1">¬°Atenci√≥n!</h6>
                <p class="mb-0">
                    Esta acci√≥n eliminar√° permanentemente el pago y 
                    <strong>restaurar√° el stock de todos los productos</strong> de la venta 
                    <strong>@Model.SaleNumber</strong> al inventario.
                </p>
            </div>
        </div>

        <!-- Payment to Delete - Preview Card -->
        <div class="card shadow-sm border-danger mb-4">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="card-title mb-0">
                    <i class="fas fa-credit-card me-2"></i>Pago a Eliminar
                </h5>
            </div>
            
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="d-flex align-items-center">
                            <div class="payment-icon me-3">
                                @switch(Model.PaymentMethod.ToString())
                                {
                                    case "Cash":
                                        <i class="fas fa-money-bill-wave"></i>
                                        break;
                                    case "Card":
                                        <i class="fas fa-credit-card"></i>
                                        break;
                                    case "Transfer":
                                        <i class="fas fa-exchange-alt"></i>
                                        break;
                                }
                            </div>
                            <div>
                                <h5 class="mb-1">@GetPaymentMethodName(Model.PaymentMethod)</h5>
                                <small class="text-muted">Pago ID: #@Model.Id</small>
                                <div class="mt-1">
                                    <span class="badge bg-primary">Venta: @Model.SaleNumber</span>
                                    <span class="badge bg-info">Cliente: @Model.CustomerName</span>
                                    <span class="badge bg-success">@Model.PaymentStatus</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="delete-summary">
                            <h4 class="text-danger mb-0">$@Model.Amount.ToString("N2")</h4>
                            <small class="text-muted">Monto a revertir</small>
                            <br>
                            <small class="text-muted">@Model.PaymentDate.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Impact Information -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0 text-muted">
                    <i class="fas fa-info-circle me-2"></i>Impacto de la Eliminaci√≥n
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <!-- Stock Impact -->
                    <div class="col-md-6">
                        <div class="impact-card stock-impact">
                            <div class="d-flex align-items-center mb-3">
                                <div class="impact-icon bg-success me-3">
                                    <i class="fas fa-undo-alt"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Restauraci√≥n de Stock</h6>
                                    <small class="text-muted">El inventario se actualizar√°</small>
                                </div>
                            </div>
                            <div class="impact-details">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Venta afectada:</span>
                                    <span class="fw-medium">@Model.SaleNumber</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Stock a restaurar:</span>
                                    <span class="fw-bold text-success">Todos los productos</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Financial Impact -->
                    <div class="col-md-6">
                        <div class="impact-card financial-impact">
                            <div class="d-flex align-items-center mb-3">
                                <div class="impact-icon bg-warning me-3">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Impacto Financiero</h6>
                                    <small class="text-muted">Reversi√≥n del pago</small>
                                </div>
                            </div>
                            <div class="impact-details">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Monto del pago:</span>
                                    <span class="fw-medium">$@Model.Amount.ToString("N2")</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Estado resultante:</span>
                                    <span class="fw-bold text-warning">Venta sin pagar</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Summary -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0 text-muted">
                    <i class="fas fa-list me-2"></i>Resumen del Pago
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-group">
                            <h6 class="text-muted mb-2">Informaci√≥n del Pago</h6>
                            <ul class="list-unstyled">
                                <li class="d-flex justify-content-between py-1">
                                    <span>ID del Pago:</span>
                                    <span class="fw-medium">#@Model.Id</span>
                                </li>
                                <li class="d-flex justify-content-between py-1">
                                    <span>M√©todo:</span>
                                    <span class="fw-medium">@GetPaymentMethodName(Model.PaymentMethod)</span>
                                </li>
                                <li class="d-flex justify-content-between py-1">
                                    <span>Monto:</span>
                                    <span class="fw-medium">$@Model.Amount.ToString("N2")</span>
                                </li>
                                <li class="d-flex justify-content-between py-1">
                                    <span>Estado:</span>
                                    <span class="fw-medium">@Model.PaymentStatus</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-group">
                            <h6 class="text-muted mb-2">Informaci√≥n de la Venta</h6>
                            <ul class="list-unstyled">
                                <li class="d-flex justify-content-between py-1">
                                    <span>N√∫mero de Venta:</span>
                                    <span class="fw-medium">@Model.SaleNumber</span>
                                </li>
                                <li class="d-flex justify-content-between py-1">
                                    <span>Cliente:</span>
                                    <span class="fw-medium">@Model.CustomerName</span>
                                </li>
                                <li class="d-flex justify-content-between py-1">
                                    <span>Fecha de Venta:</span>
                                    <span class="fw-medium">@Model.SaleDate.ToString("dd/MM/yyyy")</span>
                                </li>
                                <li class="d-flex justify-content-between py-1 border-top pt-2">
                                    <span class="fw-bold">Fecha de Pago:</span>
                                    <span class="fw-bold text-danger">@Model.PaymentDate.ToString("dd/MM/yyyy HH:mm")</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Consequences Warning -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-warning text-dark">
                <h6 class="card-title mb-0">
                    <i class="fas fa-exclamation-circle me-2"></i>Consecuencias de la Eliminaci√≥n
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="consequence-item">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-boxes text-success me-2 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Stock del Inventario</h6>
                                    <small class="text-muted">
                                        Todos los productos de la venta @Model.SaleNumber ser√°n devueltos al stock disponible.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="consequence-item">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-shopping-cart text-warning me-2 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Estado de la Venta</h6>
                                    <small class="text-muted">
                                        La venta quedar√° sin pago asociado y podr√° ser procesada nuevamente.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="consequence-item">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-database text-danger me-2 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Registro Permanente</h6>
                                    <small class="text-muted">
                                        Esta acci√≥n no se puede deshacer. El registro del pago se eliminar√° completamente.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="consequence-item">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-chart-line text-info me-2 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Reportes Financieros</h6>
                                    <small class="text-muted">
                                        Los reportes e informes financieros se actualizar√°n autom√°ticamente.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmation Actions -->
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="action-info">
                        <h6 class="mb-1">¬øConfirmas la eliminaci√≥n del pago?</h6>
                        <small class="text-muted">Esta acci√≥n no se puede deshacer</small>
                    </div>
                    <div class="action-buttons d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg">
                            <i class="fas fa-eye me-2"></i>Ver Detalles
                        </a>
                        <a asp-action="CreateEdit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-lg">
                            <i class="fas fa-edit me-2"></i>Editar Pago
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger btn-lg" id="confirmDeleteBtn">
                                <i class="fas fa-trash me-2"></i>Eliminar Definitivamente
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Context -->
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0 text-muted">
                    <i class="fas fa-lightbulb me-2"></i>¬øNecesitas ayuda?
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-edit text-warning me-2"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">¬øQuieres modificar en lugar de eliminar?</h6>
                                <small class="text-muted">
                                    Puedes editar el m√©todo de pago o corregir informaci√≥n sin eliminar el registro.
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-shopping-cart text-primary me-2"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">¬øVer toda la venta?</h6>
                                <small class="text-muted">
                                    Revisa todos los detalles de la venta antes de eliminar el pago.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <a asp-controller="Sales" asp-action="Details" asp-route-id="@Model.SaleId" class="btn btn-outline-primary">
                        <i class="fas fa-external-link-alt me-2"></i>Ver Venta Completa: @Model.SaleNumber
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    
    <script>
        // Add confirmation dialog before form submission
        document.getElementById('confirmDeleteBtn').addEventListener('click', function(e) {
            e.preventDefault();
            
            const paymentMethod = '@GetPaymentMethodName(Model.PaymentMethod)';
            const amount = @Model.Amount;
            const saleNumber = '@Model.SaleNumber';
            
            if (confirm(`¬øEst√°s completamente seguro de eliminar el pago ${paymentMethod} de $${amount.toFixed(2)}?\n\nEsta acci√≥n:\n‚Ä¢ Eliminar√° el pago definitivamente\n‚Ä¢ Restaurar√° el stock de todos los productos\n‚Ä¢ Dejar√° la venta ${saleNumber} sin pago\n‚Ä¢ No se puede deshacer\n\n¬øContinuar?`)) {
                this.closest('form').submit();
            }
        });

        // Add warning animation to delete button
        const deleteBtn = document.getElementById('confirmDeleteBtn');
        deleteBtn.addEventListener('mouseenter', function() {
            this.classList.add('animate__animated', 'animate__pulse');
        });
        
        deleteBtn.addEventListener('mouseleave', function() {
            this.classList.remove('animate__animated', 'animate__pulse');
        });

        // Add hover effects to cards
        document.querySelectorAll('.impact-card').forEach(function(card) {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.02)';
                this.style.transition = 'transform 0.3s ease';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
    </script>

    <style>
        .payment-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--bs-danger);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .impact-card {
            border-left: 4px solid;
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 0.5rem;
            height: 100%;
            transition: transform 0.3s ease;
        }

        .stock-impact {
            border-left-color: #198754;
        }

        .financial-impact {
            border-left-color: #ffc107;
        }

        .impact-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        .detail-group {
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 0.5rem;
        }

        .delete-summary {
            text-align: center;
            padding: 1rem;
            background: rgba(220, 53, 69, 0.1);
            border-radius: 0.5rem;
        }

        .consequence-item {
            padding: 1rem;
            background: #fff;
            border-radius: 0.5rem;
            border: 1px solid #dee2e6;
        }

        .btn-danger {
            background: linear-gradient(45deg, #dc3545, #c82333);
            border: none;
            font-weight: 600;
        }

        .btn-danger:hover {
            background: linear-gradient(45deg, #c82333, #a71e2a);
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }

        .card.border-danger {
            border-width: 2px !important;
        }

        .alert-warning {
            border-left: 4px solid #ffc107;
            background: rgba(255, 193, 7, 0.1);
        }

        @media (max-width: 768px) {
            .action-buttons {
                flex-direction: column;
                width: 100%;
            }
            
            .action-buttons .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }

            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
        }

        /* Animation for delete button */
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .animate__pulse {
            animation: pulse 1s infinite;
        }
    </style>
}

@functions {
    public string GetPaymentMethodName(Database.Enum.PaymentMethodType method)
    {
        return method switch
        {
            Database.Enum.PaymentMethodType.Cash => "üíµ Efectivo",
            Database.Enum.PaymentMethodType.Card => "üí≥ Tarjeta",
            Database.Enum.PaymentMethodType.Transfer => "üè¶ Transferencia",
            _ => "Desconocido"
        };
    }
} 